<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wsc.dao.inter.IStudentDao">
    <!--添加一个学生-->
    <update id="addStudent" parameterType="com.wsc.pojo.Student">
        INSERT INTO student (id,studentId,classId,paperId,studentName,studentPassword,studentGander,studentNo,studentMajor,
        studentGrader,studentNum,studentMail,studentPhone,studentPower,studentState,studentCreateTime,studentDeleteTime)
        VALUES (NULL,#{studentId},#{classId},#{paperId},#{studentName},#{studentPassword},#{studentGander},#{studentNo},#{studentMajor},
        #{studentGrader},#{studentNum},#{studentMail},#{studentPhone},#{studentPower},#{studentState},now(),NULL);
    </update>

    <!--删除学生信息-->
    <update id="deleteStudent" parameterType="int">
        UPDATE student SET studentState=0 WHERE studentId=#{studentId};
    </update>

    <!--更新学生信息-->
    <update id="updateStudent" parameterType="boolean">
        UPDATE student SET classId=#{classId},paperId=#{paperId},studentName=#{studentName},studentGander=#{studentGander},studentNo=#{studentNo},studentMajor=#{studentMajor},studentGrader=#{studentGrader},studentNum=#{studentNum},studentMail=#{studentMail},studentPhone=#{studentPhone},studentPower=#{studentPower},studentState=#{studentState}
        WHERE studentId=#{studentId}
    </update>

    <!--查询学生信息-->
    <select id="queryStudent" parameterType="int" resultType="com.wsc.pojo.Student">
        SELECT * FROM student WHERE studentId=#{studentId};
    </select>

    <!--查询一个学生集-->
    <select id="queryStudentList">
        SELECT * FROM student WHERE studentId <![CDATA[>=]]]> #{fromStudentId} AND studentId <![CDATA[<]]]> #{fromStudentId+manyStudentId};
    </select>

    <select id="queryStudentByTheClassId" parameterType="int">
        SELECT * FROM student WHERE classId=#{classId};
    </select>

    <select id="queryStudentByStudentNum" parameterType="String">
        SELECT * FROM student WHERE studentNum=#{studentNum};
    </select>

    <select id="queryStudentByPaperId" parameterType="String">
        SELECT * FROM student WHERE paperId LIKE #{paperId}",";
    </select>

</mapper>